# Base API URL
VITE_BASE_URL=http://localhost:5000/api

# ─── Auth Endpoints ────────────────────────────────────────────────────────────
VITE_AUTH_LOGIN=auth/login
VITE_AUTH_LOGOUT=auth/logout
VITE_AUTH_REFRESH=auth/refresh

# ─── Permission Endpoints ─────────────────────────────────────────────────────
# List & Create
VITE_PERMISSIONS_LIST=permissions
# Delete (use :id replacement)
VITE_PERMISSIONS_DELETE=permissions/:id

# ─── Role Endpoints ────────────────────────────────────────────────────────────
# List & Create
VITE_ROLES_LIST=roles
# Delete (use :id replacement)
VITE_ROLES_DELETE=roles/:id

# ─── User Endpoints ────────────────────────────────────────────────────────────
# List all users
VITE_USERS_LIST=users
# Create new user
VITE_USERS_CREATE=users/createUser
# Get current logged-in user
VITE_USERS_ME=users/me
# Update roles for a user
VITE_USERS_UPDATE_ROLES=users/updateUserRoles
# Update password for a user
VITE_USERS_UPDATE_PASSWORD=users/updatePassword
# Delete a user
VITE_USERS_DELETE=users/deleteUser
